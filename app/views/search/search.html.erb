

<div class="container">
	<div class="row">
		<div class="col-lg-4">
		</div>

		<div class="col-lg-4">
			<table class="table">
					<tr>
						<th>画像</th>
						<th>名前</th>
						<th>タイトル</th>
						<th>内容</th>
					</tr>

			<% if @books %>
				<% @books.each do |book| %>
					<tr>
						<td><%= link_to book_path(book) do %>
							<%= attachment_image_tag book.user, :profile_image, :fill, 100,100 ,fallback: "noimage.png",size:'100x100' %>
							<% end %></td>
						<td><%= link_to book.user.name, book %></td>
						<td><%= book.title %></td>
						<td><%= book.body %></td>
					</tr>
			  <% end %>
		     <% elsif @users %>
			  <% @users.each do |user| %>
					<tr>
						<td><%= link_to user_path(user) do %>
							<%= attachment_image_tag user, :profile_image, :fill, 100,100 ,fallback: "noimage.png",size:'100x100' %>
							<% end %></td>
						<td><%= link_to user.name, user %></td>
					</tr>
			  <% end %>
			  <% end %>
			  </table>
		</div>

		<div class="col-lg-4">
		</div>
	</div>
</div>



























