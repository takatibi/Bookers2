

<% @book.errors.full_messages.each do |message| %>
<div class="form-error">
	error
	<%= message %>
</div>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'books/list',book: @book, user: current_user %>
		</div>
		<div class="col-xs-9">
			<h1>Books</h1>
			<table class="table">
				<tr>
					<th>#</th>
					<th><h2>Title</h2></th>
					<th><h2>Opinion</h2></th>
					<th><h2>like</h2></th>
					<th><h2>comment</h2></th>
				</tr>
				<% @books.each do |book| %>
				  <tr class="book<%= book.id %>-box">
				    <%= render "books/link",book:book %>
				  </tr>
				<% end %>
			</table>
		</div>
	</div>
</div>


