<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'books/list', book: @book_new, user: @book.user %>
		</div>

		<div class="col-xs-9">
			<h1>Book detail</h1>
			<table class="table">
				<thead>
					<tr>
						<th scope="col"></th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<th scope="row">
							<%= link_to user_path(@book.user.id) do %>
							<%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100,fallback: "noimage.png",size:'100x100' %><br>
							<%= @book.user.name %>
							<% end %> 
						</th>
						<td><%= link_to  @book.title ,book_path(@book.id) %></th>
						<td><%= @book.body %></td>



						<% if @book.user.id == current_user.id %>
						<td><%= link_to"Edit",edit_book_path(@book) %></td>
						<td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
						<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>

