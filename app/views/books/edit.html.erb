
<h1>Editing Book</h1>

<% @book.errors.full_messages.each do |message| %>
<div class="form-error">
	error
	<%= message %>
</div>
<% end %>


<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>
<p><%= f.submit 'Update Book' %></p>

<% end %>
<%= link_to  "Show",book_path(@book) %>
<%= link_to "Back",books_path %>
